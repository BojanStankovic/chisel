{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "txt2pen",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/python/txt2pen.py",
            "console": "integratedTerminal",
            "args": [
                "-l",
                "-f", "3",
                "-o", "tiny.pen",
                "${workspaceFolder}/maps/two-no-monster.txt"
            ]
        },
        {
            "name": "pen2map",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/python/pen2map.py",
            "console": "integratedTerminal",
            "args": [
                "-f",
                "-b",
                "-c", "${workspaceFolder}/python/tiny.ss",
                "-s",
                "-e",
                "-o", "${workspaceFolder}/python/tiny.map",
                "${workspaceFolder}/python/tiny.pen"
            ]
        },
        {
            "name": "Python: Current File (Integrated Terminal)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Attach",
            "type": "python",
            "request": "attach",
            "port": 5678,
            "host": "localhost"
        },
        {
            "name": "Python: Module",
            "type": "python",
            "request": "launch",
            "module": "enter-your-module-name-here",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Django",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "console": "integratedTerminal",
            "args": [
                "runserver",
                "--noreload",
                "--nothreading"
            ],
            "django": true
        },
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true
        },
        {
            "name": "Python: Current File (External Terminal)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "externalTerminal"
        }
    ]
}